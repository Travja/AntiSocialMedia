@model AntiData.Model.UserProfile

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>
<div class="text-center">
    <form method="post">
        <input asp-for="Id" class="hidden"/>
        <div class="form-floating">
            <input asp-for="Name" aria-required="true" autocomplete="name" class="form-control"/>
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Age" aria-required="true" autocomplete="age" class="form-control"/>
            <label asp-for="Age"></label>
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="FavoriteBook" aria-required="true" class="form-control"/>
            <label asp-for="FavoriteBook"></label>
            <span asp-validation-for="FavoriteBook" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="FavoriteFood" aria-required="true" class="form-control"/>
            <label asp-for="FavoriteFood"></label>
            <span asp-validation-for="FavoriteFood" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Update</button>
    </form>
</div>